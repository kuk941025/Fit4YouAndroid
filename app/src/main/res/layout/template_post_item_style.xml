<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/template_post_item_style_preview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/template_post_img_preview_height"
        android:background="@color/colorLightGray"
        />

    <TextView
        android:id="@+id/template_post_item_style_wearing_clothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginTop="@dimen/margin_side"
        android:layout_marginEnd="@dimen/margin_side"
        android:text="White t- shirt (Free), Billie Jean (Med)"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_default"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/template_post_item_style_preview" />

    <TextView
        android:id="@+id/template_post_item_share_user_body_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginTop="@dimen/margin_short"
        android:layout_marginEnd="@dimen/margin_side"
        android:text="175cm 71kg"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_default"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/template_post_item_style_wearing_clothes" />

</android.support.constraint.ConstraintLayout>