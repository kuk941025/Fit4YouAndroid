    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/template_post_item_clothing_view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/template_post_viewpager_height">
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/template_post_item_clothing_dscrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginTop="@dimen/margin_side"
        android:text="description text goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/template_post_item_clothing_view_pager" />
</android.support.constraint.ConstraintLayout>